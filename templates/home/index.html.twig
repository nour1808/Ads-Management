{% extends 'base.html.twig' %}

{% block title %}
    HOMEPAGE{% endblock %}

{% block body %}

    <div class="container mt-5 ">
        <div class="jumbotron">
            <h1 class="display-3">RBN</h1>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
            <hr class="my-4">
            <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button">Savoir plus</a>
            </p>
        </div>

        <h2 class="h1 my-5">Nos appartements stars</h2>

        <div class="row">
            {% for ad in ads %}
                {% include 'ad/_ad.html.twig' with {
                    'ad' : ad.annonce
                } %}
            {% endfor %}
        </div>

        <h2 class="h1 my-5">Nos Propri√©taires stars</h2>
        <div class="row mb-5 ">

            {% for data in users %}
                <div class="col-md-4">
                    <div class="card border-secondary mb-3">
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ path('user_show', {'slug' : data.user.slug }) }}">
                                    {{data.user.fullName}}
                                </a>
                            </h4>

                            <hr>

                            <div class="card-text">
                                <a href="{{ path('user_show', {'slug' : data.user.slug }) }}" class="btn btn-sucess float-left">
                                    <img src="{{ data.user.picture }}" alt="{{data.user.fullName}}" class="avatar  mr-3 "/>
                                </a>
                                <p>{{data.user.introduction}}
                                </p>
                                <a href="{{ path('user_show', {'slug' : data.user.slug }) }}" class="btn btn-success float-right my-3">Voir le profile
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock %}