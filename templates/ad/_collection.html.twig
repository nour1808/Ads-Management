{% block _ad_images_widget %}
    <p>ici, Vous pouvez ajouter vos propres images</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0"/>
    <div class="form-group">
        <button type="button" class="btn btn-success" id="add-image">
            <i class="fas fa-plus">Ajouter une image</i>
        </button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row align-items-center mb-3">
            <div class="col-2">
                {% if value %}
                    <img src="{{ value.url }}" alt="" class="img-fluid" style="width:100px;">
                {% endif %}
            </div>

            <div class="col-8">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>

            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>

{% endblock %}